<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscanerINE.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="TJALogo.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Imagen de Tribunal de justicia administrativa de nuevo leon" />

            <Label
                Text="BIenvenido Vic-Thor"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Toma fotos de la INE e Ingresa el usuario para activarlo"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Toma fotos de la INE e Ingresa el usuario para activarlo" />

            

            <Button Text="Tomar Foto" Clicked="Button_Clicked"/>
            <Button Text="Obtener Galeria" Clicked="Button_Clicked_1"/>
            <Image x:Name="imgFoto" />
            <StackLayout x:Name="imgsFotos" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
